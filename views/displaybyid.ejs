<html>
    <head>
      <!--Import Google Icon Font-->
      <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      <!--Import materialize.css-->
      <link type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection"/>
    <!-- Compiled and minified CSS -->
     <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
      <!--Let browser know website is optimized for mobile-->
      <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
      <link rel="stylesheet" href="/stylesheets/style.css">
      <!--jqury-->
       <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
       <script src="/javascripts/project.js"></script>
       <script>
          $(document).ready(function(){
    $('.datepicker').datepicker();
  });
  $(document).ready(function(){
    $('select').formSelect();
  });
       </script>

    </head>

    <body>
        <form action="/employee/edit_employee_record" method="post" >
            <input type="hidden" value="<%=result.employeeid%>" name="employeeid">
     <div class="maincontainer">   
        <div class="box">
            <div class="row">
                <div col s6 class="heading">
                    <div style="display:flex; justify-content:space-between;">
                    Employee Edit
                    <a href="/employee/display_all_employee"><i class="material-icons prefix">contacts</i></a>
                </div>
                </div>

            </div>
            <% var name = result.employeename.split(" ")%>
              <div class="row">
                <div class="input-field col s4">
                  <i class="material-icons prefix">account_circle</i>
                  <input value="<%=name[0]%>" name="firstname" id="firstname" type="text" class="validate">
                  <label for="firstname">First Name</label>
                </div>
                <div class="input-field col s4">
                  <i class="material-icons prefix">account_circle</i>
                  <input value="<%=name[1]%>"  name="lastname" id="lastname" type="text" class="validate">
                  <label for="lastname">Last Name</label>
                </div>
                <div class="input-field col s4">
                    <i class="material-icons prefix">event</i>
                    <input value="<%=result.dob%>" name="dob" id="dob" type="text" class="datepicker">
                    <label for="dob">Date Of Birth </label>
                  </div>
              </div>
                 
              <% var male=result.gender='Male'?'checked':''
              var female=result.gender='Female'?'checked':'' %>
              <div  class="row">
                  <div class="col s4" style="margin-top: 20px;">
                    <label>
                        <input name="gender" value="Male" type="radio" <%=male%> />
                        <span>Male</span>
                      </label>
                      <label>
                        <input name="gender" value="Female" type="radio" <%=female%> />
                        <span>Female</span>
                      </label>
                  </div>
                  <div class="input-field col s4">
                    <i class="material-icons prefix">phone</i>
                    <input value="<%=result.contactnumber%>"  name="contactnumber" id="contactnumber" type="text" class="validate">
                    <label for="contactnumber">Mobile Number</label>
                  </div>
                  <div class="input-field col s4">
                    <i class="material-icons prefix">mail</i>
                    <input value="<%=result.emailaddress%>" name="emailaddress" id="emailaddress" type="email" class="validate">
                    <label for="emailaddress">Email Address</label>
                  </div>
                        
              </div>
              <div  class="row">
                <div class="input-field col s12">
                    <i class="material-icons prefix">home</i>
                    <input value="<%=result.address%>" name="address" id="address" type="text" class="validate">
                    <label for="address">Address</label>
                  </div>
    
              </div>

              <div  class="row">
                <div class="input-field col s6">
                    <select name="state"  id="state">
                      <option value="" disabled selected>Choose your state</option>
                      <option selected value="<%=result.state%>"><%=result.sname%></option>

                    </select>
                    <label>State</label>
                  </div>
                  <div class="input-field col s6">
                    <select name="city" id="city">
                      <option value="" disabled selected>Choose your city</option>
                      <option selected value="<%=result.city%>"><%=result.cname%></option>
                    
                    </select>
                    <label>City</label>
                  </div>
              </div>
            
            

              <div class="row">
                <div  class="col s6 btnstyle"  >
                    <button class="btn waves-effect waves-light" value="Edit" type="submit" name="action">Submit
                        <i class="material-icons right">edit</i>
                      </button>                    

                </div>
                <div  class="col s6  btnstyle">
                    <button class="btn waves-effect waves-light" value="Delete" type="submit" name="action">Delete
                        <i class="material-icons right">delete</i>
                      </button>                    

                </div>

              </div>

             <!--<div class="row">
                <div class="cols">
                    <%if(status==1){%>
                    <h6>Record Submitted..</h6>
                    <%}else if (status==0){%>
                        <h6>Fail to submitted  record ..</h6>
                    <%}%>

                </div>!

              </div>-->
            </form>
          </div>
        </div>     
      <!--JavaScript at end of body for optimized loading-->
      <script type="text/javascript" src="js/materialize.min.js"></script>
      <!-- Compiled and minified JavaScript -->
      <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

            
    </body>
  </html>